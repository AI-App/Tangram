export VERSION=0.7.0
rm -f tangram/__init__.so tangram/__init__.pyd

cp ../../dist/compile/aarch64-linux-gnu/libtangram_python.so tangram/__init__.so
wheel_builder --distribution tangram --version $VERSION --python cp36 --abi abi3 --platform manylinux_2_28_aarch64 --metadata metadata.toml --package tangram --output dist
rm tangram/__init__.so

