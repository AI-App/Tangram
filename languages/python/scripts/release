cp ../../dist/compile/x86_64-windows-msvc/tangram_python.dll tangram/__init__.pyd
wheel_builder --distribution tangram --version $VERSION --python cp36 --abi abi3 --platform win_amd64 --metadata metadata.toml --package tangram --output dist
rm tangram/__init__.pyd

twine upload dist/*.whl
