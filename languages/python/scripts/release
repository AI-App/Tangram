#rm tangram/__init__.so

cp ../../dist/compile/x86_64-linux-gnu/libtangram_python.so tangram/__init__.so
wheel_builder --distribution tangram --version $VERSION --python cp36 --abi abi3 --platform manylinux_2_28_x86_64 --metadata metadata.toml --package tangram --output dist
rm tangram/__init__.so

#cp ../../dist/compile/x86_64-linux-musl/libtangram_python.so tangram/__init__.so
#wheel_builder --distribution tangram --version $VERSION --python cp36 --abi abi3 --platform musllinux_1_2_x86_64 --metadata metadata.toml --package tangram --output dist
